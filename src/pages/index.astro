---
import Layout from '../layouts/Layout.astro';
import { getAllArticles } from '../lib/airtable';

let articles = [];
try {
  articles = await getAllArticles();
} catch (e) {
  console.error('Failed to fetch articles for index page:', e);
}

---

<Layout title="Articles">
  <main>
    <div class="articles-grid">
      {articles.map(article => (
        <a href={`/posts/${article.slug}`}>
        <article class="article-card">
          <h2>{article.header}</h2>
          <div class="post-type">{article.postType}</div> &bull; {article.publishedAt.toLocaleDateString('en-US', {
        year: 'numeric',
        month: 'long',
        day: 'numeric'
      })}
         {article.images?.length > 0 && (
            <img src={article.images[0].thumbnails.large?.url} width={article.images[0].thumbnails.large?.width} height={article.images[0].thumbnails.large?.height} alt={article.header} class="article-thumbnail" loading="lazy" />
          )}

        <p set:html={article.shortDescription}></p>
        </article>
      </a>
      ))}
    </div>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
  }

  .articles-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    padding: 1rem 0;
  }

  .articles-grid a {
    color: #353338;
  }


  .articles-grid p {
    line-height: 1.5;
  }

  .article-card {
    padding: 1.5rem;
    border-radius: 8px;
    background: white;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .post-type {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    border-radius: 999px;
    background: #f3f4f6;
    font-size: 0.875rem;
    margin-bottom: 1rem;
  }

  h2 {
    margin: 0 0 1rem 0;
    font-size: 1.5rem;
  }

  h2 a {
    color: inherit;
    text-decoration: none;
  }

  h2 a:hover {
    text-decoration: underline;
  }

  .original-link {
    display: inline-block;
    margin-top: 1rem;
    color: #4f46e5;
    text-decoration: none;
  }

  .original-link:hover {
    text-decoration: underline;
  }

  .article-thumbnail {
    max-width: 100%;
    height: auto;
  }
</style>
