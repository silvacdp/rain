---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
    <nav class="navbar" aria-label="Profile navigation">
      <div class="container">
        <!-- Left: Profile Section -->
      <div class="profile-section">
       
        <div class="profile-info">
          <!-- Bold name -->
          <h2 class="profile-name">More Rain</h2>
          <!-- Expertise labels -->
          <div class="expertise">
            <a href="/">All posts</span>
          </div>
        </div>
      </div>
  
    </nav>
		<slot />
    <footer>
      <div class="container">
        <ul>
  	  <li><a href="mailto:silvacdp@gmail.com?subject=Suggestion%20of%20Event">Suggest an Event</a>
          <li>&copy; {new Date().getFullYear()}
        </ul>
      </div>
    </footer>
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: system-ui, sans-serif;
		/* background: #13151a; */
    color: #32314a;
	}

  nav {
    /* width: 800px; */
    max-width: calc(100% - 2rem);
    margin: 0 auto;
  }

	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}

  /* Navigation Container */
.navbar {
  padding-bottom: 1rem;
  background-color: #32314a; /* Choose your background */
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  margin-bottom: 1rem;
}

.container {
  width: 800px;
  max-width: calc(100% - 2rem);
  margin: 0 auto;
  display: flex;
  justify-content: center;
  align-items: center;
}

.navbar svg {
  width: 1.5em;
  height: 1.5em;
}

a {
  color: rgb(67, 0, 183);
  font-weight: 500;
  text-decoration: none;
}

/* Profile Section */
.profile-section {
  display: flex;
  align-items: center;
}

/* Profile Photo Container */
.profile-photo {
  width: 55px;
  height: 55px;
  border-radius: 50%;
  background-color: #f8ecc2; /* Soft beige/yellowish background */
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  margin-right: 1rem; /* Spacing between photo and info */
}

/* Profile Image */
.profile-photo img {
  width: 90%;
  height: 90%;
  object-fit: cover;
  border-radius: 50%;
}

/* Profile Info */
.profile-info {
  display: flex;
  flex-direction: column;

  @media (max-width: 800px) {
    align-items: center;
    justify-content: center;
  }
}

/* Profile Name */
.profile-name {
  font-size: 1.2rem;
  font-weight: 700; /* Bold text */
  margin-bottom: 0.25rem;
  margin-top: 0;
}

/* Expertise Labels */
.expertise span {
  font-size: 0.9rem;
  margin-right: 0.5rem;
  color: #333;
}

/* Location & Social Icons Section */
.location-and-social {
  display: flex;
  align-items: center;
}

/* Location Wrapper */
.location {
  display: flex;
  align-items: center;
  margin-right: 1.5rem;
  gap: 8px;
}

/* Location Icon */
.location-icon {
  width: 16px;
  height: 16px;
  margin-right: 0.5rem;
}

/* Location Text */
.location-text {
  font-size: 0.9rem;
  color: #333;
}

/* Social Icons List */
.social-icons {
  display: flex;
  list-style: none;
}

/* Social Icons List Items */
.social-icons li {
  margin-left: 1rem; /* Spacing between icons */
}

/* Social Icon Links */
.social-icons a {
  display: inline-block;
  transition: filter 0.2s ease-in-out;
  /* By default, icons are black. If your SVGs are black,
     no extra color styling is needed. */
}

/* Hover Effect: Darken icons */
.social-icons a:hover {
  filter: brightness(0.7);
}

/* ---------------------- */
/* RESPONSIVE DESIGN      */
/* ---------------------- */
@media (max-width: 600px) {
  .navbar {
    flex-direction: column; /* Stack vertically */
    align-items: flex-start;
  }

  .profile-section,
  .location-and-social {
    margin: 0.5rem 0; /* Vertical spacing */
    width: 100%;
    justify-content: center;
  }

  .profile-section {
    flex-direction: column;
  }

  .profile-photo {
    margin-right: 0; /* Remove horizontal margin for center alignment */
    margin-bottom: 0.5rem;
  }

  .location-and-social {
    flex-direction: column;
  }

  .location {
    margin-right: 0;
    margin-bottom: 0.5rem;
  }
  
  .social-icons {
    justify-content: center;
  }
}

.location-and-social {
  @media (max-width: 800px) {
    display: none;
  }
}

footer {
  margin-top: 2rem;
  padding: 1.5rem 0;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
  background:rgba(0, 0, 0, 0.02);
  font-size: 0.9rem;
  color: rgb(67, 67, 67);
  text-align: center;
}

footer ul {
  padding: 0;
  list-style-type: none;
  display: inline-block;
}

footer a {
  color: rgb(67, 67, 67);
  text-decoration: underline;
}

footer li {
  padding-bottom: 0.25rem;
}
</style>
